WORKSPACE test2app1WS (

	DESCRIPTOR test2app1 ();

	TYPE TestEchoRequest (
		Str varchar
	);

	TYPE TestEchoResult (
		Res varchar
	);

	EXTENSION ENGINE WASM (
		QUERY TestEcho(TestEchoRequest) RETURNS TestEchoResult;
		COMMAND TestCmdEcho(TestEchoRequest) RETURNS TestEchoResult;
	);

	GRANT EXECUTE ON QUERY TestEcho TO WorkspaceOwner;
	GRANT EXECUTE ON COMMAND TestCmdEcho TO WorkspaceOwner;
);

ALTER WORKSPACE AppWorkspaceWS (
	EXTENSION ENGINE WASM (
		JOB Job1_sidecar '* * * * *';
	);
);
